            <div class="signature-section" style="margin-top: 30px;">
                <div class="signature-line"><%= typeof assinatura3 !== 'undefined' ? assinatura3 : "Gramado Parks-T.I" %></div>
                <div class="signature-label">Responsável pela Entrega (nome/assinatura)</div>
                
                <div class="signature-line" id="userSignature2" style="margin-top: 20px;"><%= typeof assinatura4 !== 'undefined' ? assinatura4 : "" %></div>
                <div class="signature-label">
                    Assinatura Usuário/Responsável Equipamento(s)
                    <button class="sign-button" onclick="signSecondPage()">Assinar Agora</button>
                </div>
            </div>
        </div>

        <div style="margin-top: auto;">
            <div class="internal-info">
                INTERNO
                <span>As informações contidas neste documento são destinadas ao uso interno.</span>
            </div>
            <div class="footer-info">
                <span>Página 1/2</span>
                <span>FR.14.01.001<br>Versão 05 – 11/08/2023</span>
            </div>
        </div>

        <% if (typeof userDataBlock !== 'undefined' && userDataBlock) { %>
        <div class="raw-data-block" id="rawDataBlock">
            <%= userDataBlock %>
        </div>
        <% } %>

    </div>

    <div class="signature-warning" id="signatureWarning" style="
        background-color: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 5px;
        padding: 15px;
        margin: 20px auto;
        max-width: 600px;
        text-align: center;
        color: #856404;
        font-weight: bold;
        display: block;
    ">
        ⚠️ <strong>ATENÇÃO:</strong> Para enviar o termo por e-mail, é obrigatório que ambas as partes assinem o documento.<br>
        <small style="font-weight: normal; margin-top: 5px; display: block;">
            • O <strong>Colaborador/Prestador de Serviço</strong> deve assinar na primeira página<br>
            • O <strong>Usuário/Responsável pelo Equipamento</strong> deve assinar na segunda página<br>
            <em>Apenas após ambas as assinaturas o botão de envio será habilitado.</em>
        </small>
    </div>

    <button class="email-button" id="sendEmailButton" onclick="sendEmail()" disabled style="
        background-color: #6c757d;
        cursor: not-allowed;
    ">
        Enviar Termo por E-mail
    </button>

    <div id="loadingScreen">
        <img src="/LogoEfeito.png" alt="Logo girando" id="loadingLogo">
        <div id="loadingText">Enviando documento...</div>
        <div id="progressBar"><div id="progress"></div></div>
        <div id="percentage">0%</div>
    </div>

    <div id="successMessage">
        Documento enviado com sucesso!
    </div>

    <div id="errorMessage">
        Erro ao enviar documento!
    </div>

    <script>
        function signFirstPage() {
            const userName = '<%= typeof nome !== "undefined" ? nome : "N/A" %>';
            const currentDate = new Date().toLocaleDateString('pt-BR');
            const currentTime = new Date().toLocaleTimeString('pt-BR');
            const signatureText = `${userName} - Assinado em ${currentDate} às ${currentTime}`;
            
            // Atualiza apenas a primeira assinatura (página 1)
            const signatureElement = document.getElementById('userSignature');
            signatureElement.textContent = signatureText;
            signatureElement.style.fontWeight = 'bold';
            signatureElement.style.color = '#1B4D3E';
            
            checkSignatures();
        }

        function signSecondPage() {
            const userName = '<%= typeof nome !== "undefined" ? nome : "N/A" %>';
            const currentDate = new Date().toLocaleDateString('pt-BR');
            const currentTime = new Date().toLocaleTimeString('pt-BR');
            const signatureText = `${userName} - Assinado em ${currentDate} às ${currentTime}`;
            
            // Atualiza apenas a segunda assinatura (página 2)
            const signatureElement2 = document.getElementById('userSignature2');
            if(signatureElement2) {
                signatureElement2.textContent = signatureText;
                signatureElement2.style.fontWeight = 'bold';
                signatureElement2.style.color = '#1B4D3E';
            }
            
            checkSignatures();
        }

        function checkSignatures() {
            const signature1 = document.getElementById('userSignature').textContent.trim();
            const signature2 = document.getElementById('userSignature2').textContent.trim();
            const sendButton = document.getElementById('sendEmailButton');
            const warningDiv = document.getElementById('signatureWarning');
            
            const userName = '<%= typeof nome !== "undefined" ? nome : "N/A" %>';
            const isSignature1Valid = signature1.includes(userName) && signature1.includes('Assinado em');
            const isSignature2Valid = signature2.includes(userName) && signature2.includes('Assinado em');
            
            if (isSignature1Valid && isSignature2Valid) {
                // Ambas as assinaturas estão presentes
                sendButton.disabled = false;
                sendButton.style.backgroundColor = '#007bff';
                sendButton.style.cursor = 'pointer';
                warningDiv.style.display = 'none';
            } else {
                // Faltam assinaturas
                sendButton.disabled = true;
                sendButton.style.backgroundColor = '#6c757d';
                sendButton.style.cursor = 'not-allowed';
                warningDiv.style.display = 'block';
            }
        }

        // Verificar assinaturas ao carregar a página
        document.addEventListener('DOMContentLoaded', function() {
            checkSignatures();
        });

        function sendEmail() {
            // Verificar novamente se as assinaturas estão presentes antes de enviar
            const signature1 = document.getElementById('userSignature').textContent.trim();
            const signature2 = document.getElementById('userSignature2').textContent.trim();
            const userName = '<%= typeof nome !== "undefined" ? nome : "N/A" %>';
            
            const isSignature1Valid = signature1.includes(userName) && signature1.includes('Assinado em');
            const isSignature2Valid = signature2.includes(userName) && signature2.includes('Assinado em');
            
            if (!isSignature1Valid || !isSignature2Valid) {
                alert('⚠️ ATENÇÃO: É obrigatório que ambas as partes assinem o documento antes de enviar o e-mail.\n\n' +
                      '• Colaborador/Prestador de Serviço deve assinar na primeira página\n' +
                      '• Usuário/Responsável pelo Equipamento deve assinar na segunda página\n\n' +
                      'Por favor, complete todas as assinaturas antes de prosseguir.');
                return;
            }
            
            const loadingScreen = document.getElementById('loadingScreen');
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            
            loadingScreen.style.display = 'flex';
            successMessage.style.display = 'none';
            errorMessage.style.display = 'none';
            
            let progress = 0;
            const progressElement = document.getElementById('progress');
            const percentageElement = document.getElementById('percentage');

            // Coletar todas as assinaturas
            const assinatura1 = document.querySelector('.signature-section .signature-line:first-child').textContent;
            const assinatura2 = document.getElementById('userSignature').textContent;
            const assinatura3 = document.querySelector('.page-break .signature-section .signature-line:first-child').textContent;
            const assinatura4 = document.getElementById('userSignature2').textContent;

            const formData = {
                nome: '<%= typeof nome !== "undefined" ? nome : "" %>',
                unidade: '<%= typeof unidade !== "undefined" ? unidade : "" %>',
                setor: '<%= typeof setor !== "undefined" ? setor : "" %>',
                email: '<%= typeof email !== "undefined" ? email : "" %>',
                usuario: '<%= typeof usuario !== "undefined" ? usuario : "" %>',
                telefone: '<%= typeof telefone !== "undefined" ? telefone : "" %>',
                cpf: '<%= typeof cpf !== "undefined" ? cpf : "" %>',
                rg: '<%= typeof rg !== "undefined" ? rg : "" %>',
                cnpj: '<%= typeof cnpj !== "undefined" ? cnpj : "" %>',
                tipoUsuario: '<%= typeof tipoUsuario !== "undefined" ? tipoUsuario : "" %>',
                tipoUso: '<%= typeof tipoUso !== "undefined" ? tipoUso : "P" %>',
                assinatura1: assinatura1,
                assinatura2: assinatura2,
                assinatura3: assinatura3,
                assinatura4: assinatura4
            };

            function updateProgress() {
                if (progress < 100) {
                    progress += 1;
                    progressElement.style.width = progress + '%';
                    percentageElement.textContent = progress + '%';
                    setTimeout(updateProgress, 30);
                }
            }
            updateProgress();

            fetch('/enviar-email', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
            .then(response => {
                if (response.ok) {
                    return response.text();
                } else {
                    throw new Error('Erro no servidor: ' + response.status);
                }
            })
            .then(data => {
                progress = 100;
                progressElement.style.width = '100%';
                percentageElement.textContent = '100%';
                
                setTimeout(() => {
                    loadingScreen.style.display = 'none';
                    successMessage.style.display = 'block';
                    
                    setTimeout(() => {
                        successMessage.style.display = 'none';
                    }, 5000);
                }, 1000);
            })
            .catch(error => {
                console.error('Erro ao enviar e-mail:', error);
                loadingScreen.style.display = 'none';
                errorMessage.style.display = 'block';
                
                setTimeout(() => {
                    errorMessage.style.display = 'none';
                }, 5000);
            });
        }
    </script>

</body>
</html>